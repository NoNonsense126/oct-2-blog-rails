<h2>Edit Blog</h2>

<%= form_for @blog do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <br />

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <br />

  <div>
    <%= f.label :tags %>
    <%= f.text_field :tags_names, placeholder: "food, something, car" %>
  </div>

  <br />
  
  <div>
    <%= f.submit "Update Blog!", class: "btn btn-info" %>
  </div>
<% end %>