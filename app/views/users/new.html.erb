<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit "Sign Up!", class: "btn btn-default" %>
  </div>
<% end %>